// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource mysql {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
    id Int @default(autoincrement()) @id
    twitchUserName String
    twitchId String @unique
    createdAt DateTime @default(now())
    webhook Webhook[]
    token Token?
    queues Queue[]
}

model Token {
    id Int @default(autoincrement()) @id
    ownerId Int? @unique
    owner User? @relation(fields: [ownerId], references: [id])
    oAuthToken String @unique
    refreshToken String?
    tokenExpiry DateTime
    scopes String
    createdAt DateTime @default(now())
}

model Webhook {
    id String @id
    type Int
    ownerId Int?
    owner User? @relation(fields: [ownerId], references: [id])
    href String
    subscribed Boolean
    subscriptionStart DateTime?
    subscriptionEnd DateTime?
    secret String
    leaseSeconds Int
    createdAt DateTime @default(now())
}

model Queue {
    id Int @id
    queueName String
    userId Int
    user User @relation(fields: [userId], references: [id])
    items QueueItem[]
    createdAt DateTime @default(now())
}

model QueueItem {
    id Int @id
    queueId Int
    queue Queue @relation(fields: [queueId], references: [id])
    type Int
    description String
    done Boolean
    iconUrl String?
    estimatedDurationMs Int?
    followsNotifId Int?
    followsNotification FollowsNotification? @relation(fields: [followsNotifId], references: [id])
    subNotifId Int?
    subNotification SubscriberNotification? @relation(fields: [subNotifId], references: [id])
    raidNotifId Int?
    raidNotification RaidNotification? @relation(fields: [raidNotifId], references: [id])
    youtubeVideoId Int?
    youtubeVideoNotification YoutubeVideo? @relation(fields: [youtubeVideoId], references: [id])
    bitsNotifId Int?
    bitsNotification BitsNotification? @relation(fields: [bitsNotifId], references: [id])
    donationNotifId Int?
    donationNotification DonationNotification? @relation(fields: [donationNotifId], references: [id])
    createdAt DateTime @default(now())
}

model FollowsNotification {
    id Int @id
    user String
}

model SubscriberNotification {
    id Int @id
    user String
    streak Int
    message String
}

model RaidNotification {
    id Int @id
    channel String
    viewers Int
}

model YoutubeVideo {
    id Int @id
    videoId String
    startTimeS Int
    durationS Int
}

model BitsNotification {
    id Int @id
    user String
    amount Int
    message String?
}

model DonationNotification {
    id Int @id
    anonymous Boolean
    user String
    message String?
}